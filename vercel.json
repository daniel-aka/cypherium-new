{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/css/(.*)",
            "dest": "frontend/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "frontend/js/$1"
        },
        {
            "src": "/assets/(.*)",
            "dest": "frontend/assets/$1"
        },
        {
            "src": "/about.html",
            "dest": "frontend/about.html"
        },
        {
            "src": "/login.html",
            "dest": "frontend/login.html"
        },
        {
            "src": "/signup.html",
            "dest": "frontend/signup.html"
        },
        {
            "src": "/dashboard.html",
            "dest": "frontend/dashboard.html"
        },
        {
            "src": "/contact.html",
            "dest": "frontend/contact.html"
        },
        {
            "src": "/faqs.html",
            "dest": "frontend/faqs.html"
        },
        {
            "src": "/terms.html",
            "dest": "frontend/terms.html"
        },
        {
            "src": "/referral.html",
            "dest": "frontend/referral.html"
        },
        {
            "src": "/investment.html",
            "dest": "frontend/investment.html"
        },
        {
            "src": "/features.html",
            "dest": "frontend/features.html"
        },
        {
            "src": "/admin.html",
            "dest": "frontend/admin.html"
        },
        {
            "src": "/admin-login.html",
            "dest": "frontend/admin-login.html"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "VERCEL": "1"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cross-Origin-Opener-Policy",
                    "value": "same-origin-allow-popups"
                },
                {
                    "key": "Cross-Origin-Embedder-Policy",
                    "value": "unsafe-none"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                }
            ]
        }
    ]
} 